<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:paddingTop="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_round_corner">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/bottomSheet_imageView_container_coordinatorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/bottomSheet_imageView"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_dog"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp" />

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_accent"
                app:layout_anchor="@id/bottomSheet_imageView"
                app:layout_anchorGravity="bottom|end">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_share_black_2dp"/>

            </RelativeLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@id/bottomSheet_imageView_container_coordinatorLayout"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bottomSheet_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="Demo"
                />

            <EditText
                android:id="@+id/bottomSheet_age_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Age: 12yrs"
                android:textColor="@color/white"
                android:background="#00000000"
                android:enabled="false"/>





        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bottomSheet_breed_textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottomSheet_imageView_container_coordinatorLayout"
            android:hint="Breed"
            android:textColorHint="@color/colorAccent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="32dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="20dp"
                android:text="Pagall"
                android:textColor="@color/white"
                android:background="#00000000"
                android:enabled="false"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bottomSheet_description_textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottomSheet_breed_textInputLayout"
            android:hint="Description"
            android:textColorHint="@color/colorAccent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            app:hintTextAppearance="@style/very_small_textAppearence_Theme">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18dp"
                android:ellipsize="end"
                android:text="In this post we continue with the same layouts that the previous post contains. In this post we continue with the same layouts that the previous post contains.In this post we continue with the same layouts that the previous post contains.
In this post we continue with the same layouts that the previous post contains.
"
                android:textColor="@color/white"
                android:background="#00000000"
                android:enabled="false"
                android:maxLength="250"
                android:maxLines="6"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bottomSheet_healthStatus_textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottomSheet_description_textInputLayout"
            android:hint="Health"
            android:textColorHint="@color/colorAccent"
            android:padding="16dp"
            app:hintTextAppearance="@style/very_small_textAppearence_Theme"
            android:layout_marginTop="-12dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="20dp"
                android:text="In this post we continue with the same layouts that the previous post contains. In this post we continue with the same layouts that the previous post"
                android:textColor="@color/white"
                android:background="#00000000"
                android:enabled="false"
                android:ellipsize="end"
                android:maxLength="70"/>

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

</RelativeLayout>