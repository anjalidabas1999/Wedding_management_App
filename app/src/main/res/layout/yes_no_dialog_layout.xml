<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/yesNO_dialog_root_relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <TextView
        android:id="@+id/yesNo_heading_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure?"
        android:textSize="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="184dp"
        android:textColor="@color/white"/>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_button_background_dark">


        <ImageButton
            android:id="@+id/yesNo_cancel_imageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="@color/zxing_transparent"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="32dp"/>
            <!--android:layout_alignParentBottom="true"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="28dp"-->

        <ImageButton
            android:id="@+id/yesNo_confirm_imageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_check"
            android:background="@color/zxing_transparent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"/>
            <!--android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="28dp"/>-->



    </RelativeLayout>



</RelativeLayout>