<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6">

    <LinearLayout
        android:id="@+id/menu_accountItem_container_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/menu_settingsItem_container_linearLayout"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_account_circle_black_24dp"/>

        <TextView
            android:id="@+id/menu_accountItem_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accounts"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_above="@id/menu_settingsItem_textView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_settingsItem_container_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_margin="32dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings_black_24dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/menu_settingsItem_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_logOutItem_container_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="32dp"
        android:layout_below="@id/menu_settingsItem_container_linearLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_logout_black_24dp"/>

        <TextView
            android:id="@+id/menu_logOut_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LogOut"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/menu_settingsItem_textView"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>






</RelativeLayout>