<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/menu_accountItem_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/menu_SettingsItem_textView"
        android:layout_centerVertical="true"
        android:text="Accounts"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        />
    <TextView
        android:id="@+id/menu_SettingsItem_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accounts"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/menu_logOut_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/menu_SettingsItem_textView"
        android:text="Accounts"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"/>

</RelativeLayout>