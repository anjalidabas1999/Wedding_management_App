<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <TextView
        android:id="@+id/newPetEntry_currentTitle_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="Name"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="normal"
        android:textSize="28sp"
        />

    <EditText
        android:id="@+id/newPetEntry_inputText_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newPetEntry_currentTitle_textView"
        android:hint="Enter here"
        android:padding="16dp"
        android:layout_margin="32dp"
        android:textSize="32sp"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:maxLines="3"
        android:minLines="1"
        android:ellipsize="end"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_below="@id/newPetEntry_inputText_editText">

        <ImageButton
            android:id="@+id/newPetEntry_previous_imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow_back_white"
            android:background="@drawable/circle"
            android:layout_alignParentStart="true"/>

        <ImageButton
            android:id="@+id/newPetEntry_cancel_imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_close_white"
            android:background="@drawable/circle"
            android:layout_centerInParent="true"/>


        <ImageButton
            android:id="@+id/newPetEntry_next_imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow_forward_white"
            android:background="@drawable/circle"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>





</RelativeLayout>